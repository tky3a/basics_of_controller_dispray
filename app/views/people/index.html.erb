<h1>People#index</h1>
<p><%= @msg %></p>
<pre>
  <table>
    <tr>
      <th>Id</th><th>Name</th><th>Age</th><th>Mail</th><th>編集</th><th>削除</th>
    </tr>
    <% @data.each do |obj| %>
    <tr>
      <td><%= obj.id %></td>
      <td><a href="/people/<%= obj.id %>"><%= obj.name %></a></td>
      <td><%= obj.age %></td>
      <td><%= obj.mail %></td>
      <td><a href="/people/edit/<%= obj.id %>">edit</a></td>
      <!--削除リンク(JSで削除処理)-->
      <td><a href="javascript:delData(<%= obj.id %>);">Delete</a></td>
    </tr>
    <% end %>
  </table>

  <script>
    function delData(num){
      if (confirm('このデータを削除しますか？')){
        document.location = "/people/delete/" + num;
      }
      return false;
    }
  </script>

</pre>
